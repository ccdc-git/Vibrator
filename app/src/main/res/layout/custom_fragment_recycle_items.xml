<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    android:clickable="false"
    android:focusable="true"
    android:paddingTop="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView_fragment_custom_card"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="#33000000"
        app:cardCornerRadius="2dp"
        android:clickable="true"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:id="@+id/RelativeLayout_fragment_custom_itemLayout"
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    >
                    <ccdc.lib.customvibrator.VibeBlockView
                        android:id="@+id/VibeBlockView_fragment_custom_item"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            <TextView
                android:id="@+id/TextView_fragment_custom_title"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textSize="20sp"
                android:text=""
                android:textColor="@color/black"
                android:layout_margin="8dp"
                android:background="#88ffffff"
                android:layout_alignParentStart="true"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>